<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_notes">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/text_date"
            android:textSize="16dp"
            android:text="@string/date_format"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:gravity="center" android:layout_marginLeft="1dp" android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp" android:layout_marginBottom="0.5dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/text_notes"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginTop="0.5dp" android:layout_marginBottom="0.5dp" android:layout_marginLeft="0.5dp"
            android:layout_marginRight="1dp"/>
</LinearLayout>